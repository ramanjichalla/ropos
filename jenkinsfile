pipeline {
    agent any
    stages {
        stage ('checkout') {
            steps {
                git 'https://github.com/jglick/simple-maven-project-with-tests.git'
            }
        }
        stage ('build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage ('send to server') {
            steps {
                sshagent(['ram']) {
                    sh 'scp target/*.jar user@remote-server:/path/to/destination/'
                }
            }
        }
    }
}
